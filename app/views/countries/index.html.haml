%p#notice= notice
%h1 Listing Countries
%table
  %thead
    %tr
      %th Name
      %th Code
      %th{:colspan => "3"}
  %tbody
    - @countries.each do |country|
      %tr
        %td= country.name
        %td= country.code
        %td= link_to 'Show', country
        %td= link_to 'Edit', edit_country_path(country)
        %td= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Country', new_country_path
